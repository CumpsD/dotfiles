#!/usr/bin/env bash

set -e

if [ "$1" = "base" ]; then
    CONFIG="install-base.conf.yaml"
elif [ "$1" = "base-pop" ]; then
    CONFIG="install-base-pop.conf.yaml"
elif [ "$1" = "arch" ]; then
    CONFIG="install-arch.conf.yaml"
elif [ "$1" = "ubuntu" ]; then
    CONFIG="install-ubuntu.conf.yaml"
elif [ "$1" = "dotnet" ]; then
    CONFIG="install-dotnet.conf.yaml"
elif [ "$1" = "wsl" ]; then
    CONFIG="install-wsl.conf.yaml"
elif [ "$1" = "sudo" ]; then
    CONFIG="install-sudo.conf.yaml"
elif [ "$1" = "sudo-pop" ]; then
    CONFIG="install-sudo-pop.conf.yaml"
else
     echo "Missing argument"
     exit 1
fi

DOTBOT_DIR="dotbot"
DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git -C "${DOTBOT_DIR}" submodule sync --quiet --recursive
git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}"
